{% extends 'layouts/vertical.html.twig' %}

{% set title = 'Subject List' %}

{% block css %}
	<!-- Datatables css -->
	<link href="/libs/datatables.net-bs5/css/dataTables.bootstrap5.min.css" rel="stylesheet" type="text/css"/>
	<link href="/libs/datatables.net-buttons-bs5/css/buttons.bootstrap5.min.css" rel="stylesheet" type="text/css"/>
	<link href="/libs/datatables.net-keytable-bs5/css/keyTable.bootstrap5.min.css" rel="stylesheet" type="text/css"/>
	<link href="/libs/datatables.net-responsive-bs5/css/responsive.bootstrap5.min.css" rel="stylesheet" type="text/css"/>
	<link href="/libs/datatables.net-select-bs5/css/select.bootstrap5.min.css" rel="stylesheet" type="text/css"/>

	<link href="/libs/simple-datatables/style.css" rel="stylesheet" type="text/css"/>
{% endblock %}

{% block content %}

	<!-- Start Content-->
	<div class="container-fluid">

		<div class="py-3 d-flex align-items-sm-center flex-sm-row flex-column">
			<div class="flex-grow-1 d-flex align-items-center gap-4 mb-3 mb-sm-0">
				<h4 class="fs-18 fw-semibold m-0">Subject List</h4>
				<button type="button" class="btn btn-sm btn-primary waves-effect waves-light" data-bs-toggle="modal" data-bs-target=".bs-example-modal-xl">
					<i class="mdi mdi-plus text-white"></i>
				</button>

			</div>

			<div class="text-end">
				<ol class="breadcrumb m-0 py-0">
					<li class="breadcrumb-item">
						<a href="#">Apps</a>
					</li>
					<li class="breadcrumb-item active">Subject List</li>
				</ol>
			</div>
		</div>

		<div class="row">
			<div class="col-12">
				<div class="card">
					<div class="card-body">
						<table id="datatable" class="table dt-responsive table-responsive nowrap">
							<thead>
								<tr>
									<th>Subject Code</th>
									<th>Subject Name</th>
									<th>Description</th>
									<th>Action</th>
								</tr>
							</thead>
							<tbody>

								{% for schoolClasses in schoolClasses %}
									<tr>
										<td>
											<p class="d-inline-block align-middle mb-0">
												<span>{{ schoolClasses.subjectCode }}</span>
											</p>
										</td>
										<td>{{ schoolClasses.subjectName }}</td>
										<td>{{ schoolClasses.description }}</td>
										<td class="text-start">
											<a aria-label="anchor" class="btn btn-sm bg-success-subtle" data-bs-toggle="tooltip" data-bs-original-title="View Sections" href="{{ path('app_subject_sections', { id: schoolClasses.id }) }}">
												<i class="mdi mdi-eye fs-14 text-success"></i>
											</a>
											<button aria-label="Edit" class="btn btn-sm bg-primary-subtle me-1" data-bs-toggle="modal" data-bs-target="#editModal{{ schoolClasses.id }}" title="Edit">
												<i class="mdi mdi-pencil-outline fs-14 text-primary"></i>
											</button>
											<button type="button" class="btn btn-sm bg-danger-subtle" title="Delete" data-bs-toggle="modal" data-bs-target="#staticBackdrop{{ schoolClasses.id }}">
												<i class="mdi mdi-delete fs-14 text-danger"></i>
											</button>
										</td>
									</tr>
								{% else %}
									<tr>
										<td colspan="2">No sections yet.</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
		<!-- end row -->
	</div>

	<!-- container-fluid -->
	<div class="modal fade bs-example-modal-xl" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel" aria-hidden="true">
		<div class="modal-dialog modal-xl">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="myExtraLargeModalLabel">Add New Subject</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<div class="col-lg-12 ms-lg-auto">
						<div class="mt-5 mt-lg-4">
							{{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

							<div class="row mb-4">
								{{ form_label(form.subjectCode, 'Subject Code', {'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
								<div class="col-sm-9">
									{{ form_widget(form.subjectCode, {'attr': {'class': 'form-control', 'placeholder': 'Enter Subject Code'}}) }}
									{{ form_errors(form.subjectCode) }}
								</div>
							</div>

							<div class="row mb-4">
								{{ form_label(form.subjectName, 'Subject Name', {'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
								<div class="col-sm-9">
									{{ form_widget(form.subjectName, {'attr': {'class': 'form-control', 'placeholder': 'Enter Subject Name'}}) }}
									{{ form_errors(form.subjectName) }}
								</div>
							</div>

							<div class="row mb-4">
								{{ form_label(form.description, 'Description', {'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
								<div class="col-sm-9">
									{{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Enter Description'}}) }}
									{{ form_errors(form.description) }}
								</div>
							</div>
							<div class="d-flex justify-content-end">
								<button class="btn btn-primary">Add Subject</button>
							</div>
							{{ form_end(form) }}
						</div>
					</div>

				</div>
			</div>
			<!-- /.modal-content -->
		</div>
		<!-- /.modal-dialog -->
	</div>

	{% for schoolClasses in schoolClasses %}
		<div class="modal fade" id="editModal{{ schoolClasses.id }}" tabindex="-1" aria-labelledby="editModalLabel{{ schoolClasses.id }}" aria-hidden="true">
			<div class="modal-dialog modal-lg">
				<div class="modal-content">
					{% if editForms[schoolClasses.id].vars.errors|length > 0 %}
						<div class="alert alert-danger">
							{{ form_errors(editForms[schoolClasses.id]) }}
						</div>
					{% endif %}
					{{ form_start(editForms[schoolClasses.id]) }}
					<div class="modal-header">
						<h5 class="modal-title" id="editModalLabel{{ schoolClasses.id }}">Edit Student</h5>
						<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
					</div>
					<div class="modal-body">
						<div class="row mb-4">
							{{ form_label(editForms[schoolClasses.id].subjectName, 'Student Number', {'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
							<div class="col-sm-9">
								{{ form_widget(editForms[schoolClasses.id].subjectName, {'attr': {'class': 'form-control'}}) }}
								{{ form_errors(editForms[schoolClasses.id].subjectName) }}
							</div>
						</div>
						<div class="row mb-4">
							{{ form_label(editForms[schoolClasses.id].subjectCode, 'Student Name', {'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
							<div class="col-sm-9">
								{{ form_widget(editForms[schoolClasses.id].subjectCode, {'attr': {'class': 'form-control'}}) }}
								{{ form_errors(editForms[schoolClasses.id].subjectCode) }}
							</div>
						</div>
						<div class="row mb-4">
							{{ form_label(editForms[schoolClasses.id].description, 'Student Course', {'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
							<div class="col-sm-9">
								{{ form_widget(editForms[schoolClasses.id].description, {'attr': {'class': 'form-control'}}) }}
								{{ form_errors(editForms[schoolClasses.id].description) }}
							</div>
						</div>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
						<button type="submit" class="btn btn-primary">Save changes</button>
					</div>
					{{ form_end(editForms[schoolClasses.id]) }}
				</div>
			</div>
		</div>
	{% endfor %}

	<!-- Delete Subject Modal -->
	{% for schoolClasses in schoolClasses %}
		<!-- Modal -->
		<div class="modal fade" id="staticBackdrop{{ schoolClasses.id }}" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<h1 class="modal-title fs-5" id="staticBackdropLabel">Confirm Deletion</h1>
						<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
					</div>
					<div class="modal-body">
						<p>Are you sure you want to delete the subject
							<strong>{{ schoolClasses.subjectName }}</strong>? This action cannot be undone.</p>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
						<form method="post" action="{{ path('app_subject_delete', { id: schoolClasses.id }) }}" style="display:inline;">
							<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ schoolClasses.id) }}">
							<button type="submit" class="btn btn-primary">Yes, Delete</button>
						</form>
					</div>
				</div>
			</div>
		</div>
		<!-- end col -->
	{% endfor %}
{% endblock %}
